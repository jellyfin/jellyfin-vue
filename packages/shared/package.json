{
  "name": "@jellyfin-vue/shared",
  "type": "module",
  "description": "Shared code between Jellyfin Vue packages",
  "exports": {
    "./*": "./src/universal/*.ts",
    "./node/*": "./src/node/*.ts"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:inspect": "eslint-config-inspector",
    "check:types": "vue-tsc",
    "test": "vitest run"
  },
  "devDependencies": {
    "@jellyfin-vue/configs": "*"
  },
  "dependencies": {
    "dompurify": "3.2.6",
    "marked": "15.0.12"
  },
  "peerDependencies": {
    "@vue/shared": "*",
    "type-fest": "*",
    "vitest": "*"
  },
  "peerDependenciesMeta": {
    "type-fest": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  }
}
