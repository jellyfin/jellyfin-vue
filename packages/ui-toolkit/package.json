{
  "name": "@jellyfin-vue/ui-toolkit",
  "type": "module",
  "description": "Base components and UI toolkit for Jellyfin Vue",
  "imports": {
    "#/*": "./src/*"
  },
  "exports": {
    "./composables/*.ts": "./src/composables/*.ts",
    "./components": "./src/components/index.ts",
    "./store": "./src/store.ts",
    "./resolver": "./src/resolver.ts"
  },
  "scripts": {
    "lint": "eslint . --flag unstable_ts_config",
    "lint:fix": "eslint . --fix --flag unstable_ts_config",
    "lint:inspect": "eslint-config-inspector",
    "check:types": "vue-tsc",
    "storybook": "storybook dev -p 6006 --config-dir storybook --no-open"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.4",
    "@jellyfin-vue/configs": "*",
    "@storybook/addon-a11y": "8.5.1",
    "@storybook/addon-essentials": "8.5.1",
    "@storybook/addon-interactions": "8.5.1",
    "@storybook/blocks": "8.5.1",
    "@storybook/vue3": "8.5.1",
    "@storybook/vue3-vite": "8.5.1",
    "storybook": "8.5.1",
    "unplugin-vue-components": "28.0.0",
    "vite": "6.0.7"
  },
  "dependencies": {
    "@skirtle/vue-vnode-utils": "0.2.0",
    "@vueuse/core": "12.3.0",
    "comlink": "4.4.2",
    "vue": "3.5.13"
  }
}
