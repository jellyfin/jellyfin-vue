{
  "extends": "@jellyfin-vue/configs/typescript",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "types": [
      "axios",
      "@intlify/unplugin-vue-i18n/messages",
      "unplugin-icons/types/vue",
      "unplugin-vue-router/client",
      "vite/client",
      "vuetify",
      "vue"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "dist",
    "node_modules",
    "coverage"
  ],
  "include": [
    "**/*.ts",
    "**/*.vue",
    "**/*d.ts",
    "**/*.json"
  ]
}
