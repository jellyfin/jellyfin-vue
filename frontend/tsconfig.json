{
  "extends": "@jellyfin-vue/configs/typescript",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "axios",
      "@jellyfin-vue/i18n",
      "vite/client",
      "vuetify",
      "vue"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "coverage"
  ],
  "include": [
    "**/*.ts",
    "**/*.vue",
    "**/*d.ts",
    "**/*.json"
  ],
  "vueCompilerOptions": {
    "plugins": [
      "vue-router/volar/sfc-typed-router",
      "vue-router/volar/sfc-route-blocks"
    ],
  },
}
