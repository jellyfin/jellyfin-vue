{
  "extends": "@jellyfin-vue/configs/typescript",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ES2024",
      "DOM"
    ],
    "types": [
      "axios",
      "@intlify/unplugin-vue-i18n/messages",
      "unplugin-icons/types/vue",
      "unplugin-vue-router/client",
      "vite/client",
      "vuetify",
      "vue"
